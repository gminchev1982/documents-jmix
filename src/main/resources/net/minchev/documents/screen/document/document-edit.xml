<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://DocumentEdit.caption"
        focusComponent="form">
    <data>
        <instance id="documentDc"
                  class="net.minchev.documents.entity.Document">
            <fetchPlan extends="_local">
                <property name="status" fetchPlan="_instance_name"/>
                <property name="type" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader/>
        </instance>

        <collection id="documentTypeDc" class="net.minchev.documents.entity.DocumentType">
            <fetchPlan extends="_base"/>
            <loader id="documentTypeDl">
                <query>
                    <![CDATA[select dt from DocumentType dt]]>
                </query>
            </loader>
        </collection>

        <collection id="documentStatusDc" class="net.minchev.documents.entity.DocumentStatus">
            <fetchPlan extends="_base"/>
            <loader id="documentStatusDl">
                <query>
                    <![CDATA[select ds from DocumentStatus ds]]>
                </query>
            </loader>
        </collection>
    </data>
    <actions>
        <action id="windowCommitAndClose"
                caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="documentDc">
            <column width="350px">
                <textField id="documentIdField" property="id" editable="false" caption="msg://DocumentEdit.documentId"/>
                <textField id="documentNumberField" property="number" editable="false" caption="msg://DocumentEdit.documentNumber"/>
                <entityComboBox id="documentTypeField"
                                dataContainer="documentDc"
                                optionsContainer="documentTypeDc"
                                property="type"
                                caption="msg://DocumentEdit.documentType"
                                required="true"/>
                <comboBox id="kindField" property="kind" caption="msg://DocumentEdit.documentKind"
                          inputPrompt="msg://DocumentEdit.select"/>
                <entityComboBox id="documentStatusField"
                                dataContainer="documentDc"
                                optionsContainer="documentStatusDc"
                                property="status"
                                caption="msg://DocumentEdit.documentStatus"
                                required="true"/>
                <textArea  id="descriptionField" property="description" caption="msg://DocumentEdit.documentDescription" rows="7" editable="true"/>
                <textField id="externalNumberField" property="externalNumber" editable="true" caption="msg://DocumentEdit.documentExternalNumber"/>
                <dateField id="externalDateField" property="externalDate"  caption="msg://DocumentEdit.documentExternalDate"/>
                <textField id="entryTypeField" property="entryType" editable="true" caption="msg://DocumentEdit.documentEntryType"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
